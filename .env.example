# App Configuration
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# PayPal Configuration (LIVE)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# CoinPayments Configuration (LIVE)
COINPAYMENTS_PUBLIC_KEY=your-coinpayments-public-key
COINPAYMENTS_PRIVATE_KEY=your-coinpayments-private-key
COINPAYMENTS_API_KEY=your-coinpayments-api-key
COINPAYMENTS_API_SECRET=your-coinpayments-api-secret
COINPAYMENTS_IPN_SECRET=your-coinpayments-ipn-secret
COINPAYMENTS_MERCHANT_ID=your-coinpayments-merchant-id
